@model Cliente

@{
    ViewData["Title"] = "Create";
    Layout = "_Layout";
}

<h1 class="text-center my-4">Create Cliente</h1>

<h4>Cliente</h4>
<hr />
<div class="row justify-content-center">
    <div class="col-md-8">
        <form asp-action="Create">
