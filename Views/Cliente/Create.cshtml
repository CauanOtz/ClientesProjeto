@model Cliente

@{
    ViewData["Title"] = "Create Cliente";
    Layout = "_Layout";
}

@section Styles {
    <link href="~/css/form.css" rel="stylesheet" />
}

<div class="container mt-5">
    <h1 class="text-center my-4 display-4 text-primary">Cadastrar Cliente</h1>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <form asp-action="Create" method="post" class="shadow-lg p-4 rounded bg-light">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="row g-3">
            <div class="col-md-6">
                <label asp-for="NomeCompleto" class="form-label fw-bold">Nome Completo</label>
                <input asp-for="NomeCompleto" class="form-control" placeholder="Digite o nome completo" />
                <span asp-validation-for="NomeCompleto" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="DataNascimento" class="form-label fw-bold">Data de Nascimento</label>
                <input asp-for="DataNascimento" class="form-control" type="date" />
                <span asp-validation-for="DataNascimento" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="RG" class="form-label fw-bold">RG</label>
                <input asp-for="RG" class="form-control" placeholder="Digite o RG" />
                <span asp-validation-for="RG" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="CPF" class="form-label fw-bold">CPF</label>
                <input asp-for="CPF" class="form-control" placeholder="Digite o CPF" />
                <span asp-validation-for="CPF" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="Logradouro" class="form-label fw-bold">Logradouro</label>
                <input asp-for="Logradouro" id="Logradouro" class="form-control" placeholder="Digite o Logradouro" />
                <span asp-validation-for="Logradouro" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="Bairro" class="form-label fw-bold">Bairro</label>
                <input asp-for="Bairro" id="Bairro" class="form-control" placeholder="Digite o Bairro" />
                <span asp-validation-for="Bairro" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="Cidade" class="form-label fw-bold">Cidade</label>
                <input asp-for="Cidade" id="Cidade" class="form-control" placeholder="Digite a Cidade" />
                <span asp-validation-for="Cidade" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="Complemento" class="form-label fw-bold">Complemento</label>
                <input asp-for="Complemento" class="form-control" placeholder="Digite o Complemento (opcional)" />
                <span asp-validation-for="Complemento" class="text-danger"></span>
            </div>

            <div class="col-md-4">
                <label asp-for="UF" class="form-label fw-bold">UF</label>
                <input asp-for="UF" id="UF" class="form-control" placeholder="Digite o UF" />
                <span asp-validation-for="UF" class="text-danger"></span>
            </div>

            <div class="col-md-4">
                <label asp-for="CEP" class="form-label fw-bold">CEP</label>
                <input asp-for="CEP" id="CEP" class="form-control" placeholder="Digite o CEP" />
                <span asp-validation-for="CEP" class="text-danger"></span>
            </div>

            <div class="col-md-4">
                <label asp-for="EstadoCivil" class="form-label fw-bold">Estado Civil</label>
                <input asp-for="EstadoCivil" class="form-control" placeholder="Digite o Estado Civil" />
                <span asp-validation-for="EstadoCivil" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="NomePai" class="form-label fw-bold">Nome do Pai</label>
                <input asp-for="NomePai" class="form-control" placeholder="Digite o nome do Pai" />
                <span asp-validation-for="NomePai" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="NomeMae" class="form-label fw-bold">Nome da Mãe</label>
                <input asp-for="NomeMae" class="form-control" placeholder="Digite o nome da Mãe" />
                <span asp-validation-for="NomeMae" class="text-danger"></span>
            </div>
        </div>

        <div class="text-center mt-4">
            <button type="submit" class="btn btn-success btn-lg px-5">Salvar</button>
            <a asp-action="Index" class="btn btn-secondary btn-lg px-5">Cancelar</a>
        </div>
    </form>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="~/js/cep.js"></script>

@if (TempData["SuccessMessage"] != null)
{
    <script>
        Swal.fire({
            icon: 'success',
            title: 'Sucesso!',
            text: '@TempData["SuccessMessage"]',
            confirmButtonText: 'OK'
        });
    </script>
}
