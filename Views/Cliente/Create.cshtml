            <div class="form-group mb-3">
                <label asp-for="RG" class="form-label"></label>
                <input asp-for="RG" class="form-control" placeholder="Digite o RG" />
                <span asp-validation-for="RG" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="CPF" class="form-label"></label>
                <input asp-for="CPF" class="form-control" placeholder="Digite o CPF" />
                <span asp-validation-for="CPF" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Logradouro" class="form-label"></label>
                <input asp-for="Logradouro" class="form-control" placeholder="Digite o Logradouro" />
                <span asp-validation-for="Logradouro" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Bairro" class="form-label"></label>
                <input asp-for="Bairro" class="form-control" placeholder="Digite o Bairro" />
