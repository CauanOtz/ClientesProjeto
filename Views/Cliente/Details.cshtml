@model Cliente

@{
    ViewData["Title"] = "Details";
    Layout = "_Layout";
}

<div class="container my-4">
    <h1 class="text-center mb-4">Detalhes do cliente</h1>
    
    <div class="card shadow-sm">
        <div class="card-body">
            <h4 class="card-title">Informações do Cliente</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-3 font-weight-bold">Nome Completo</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.NomeCompleto)</dd>

                <dt class="col-sm-3 font-weight-bold">Data de Nascimento</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.DataNascimento)</dd>

                <dt class="col-sm-3 font-weight-bold">RG</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.RG)</dd>

                <dt class="col-sm-3 font-weight-bold">CPF</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.CPF)</dd>

                <dt class="col-sm-3 font-weight-bold">Logradouro</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Logradouro)</dd>

                <dt class="col-sm-3 font-weight-bold">Bairro</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Bairro)</dd>

                <dt class="col-sm-3 font-weight-bold">Cidade</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Cidade)</dd>

                <dt class="col-sm-3 font-weight-bold">Complemento</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Complemento)</dd>

                <dt class="col-sm-3 font-weight-bold">UF</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.UF)</dd>

                <dt class="col-sm-3 font-weight-bold">CEP</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.CEP)</dd>

                <dt class="col-sm-3 font-weight-bold">Estado Civil</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.EstadoCivil)</dd>

                <dt class="col-sm-3 font-weight-bold">Nome do Pai</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.NomePai)</dd>

                <dt class="col-sm-3 font-weight-bold">Nome da Mãe</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.NomeMae)</dd>
            </dl>
        </div>
    </div>

    <div class="text-center mt-4">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning btn-sm">Edit</a>
        <a asp-action="Index" class="btn btn-outline-primary btn-sm">Back to List</a>
    </div>
</div>

